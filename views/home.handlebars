        <!-- INPUT APPOINTMENT -->
        <div class="row text-1 justify-content-center">
            <h2 class="text-center fw-bold subtitulo" id="agendarservicio">Agendar servicio</h2>
            <div class="col-7 formulario">
                <form id="form">
                    <div class="row justify-content-between">
                        <!-- INPUT CLIENT NAME -->
                        <div class="col-5 mb-3 row form m-2">
                            <label class="col-sm-3 col-form-label">Nombre:</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" id="name" required>
                            </div>
                        </div>
                        <!-- INPUT SERVICE -->
                        <div class="col-6 mb-3 row form m-2">
                            <label class="col-sm-5 col-form-label">Servicio a solicitar:</label>
                            <div class="col-sm-7">
                                <select class="form-select" id="serviceSelect" required>
                                    <option value=""></option>
                                    <option value="Cambios de cerradura ">Cambios de cerradura</option>
                                    <option value="Apertura de casas ">Apertura de casas</option>
                                    <option value="Apertura de autos ">Apertura de autos</option>
                                    <option value="Apertura de muebles ">Apertura de muebles</option>
                                    <option value="Apertura de cajas fuertes ">Apertura de cajas fuertes</option>
                                    <option value="Copias de llaves ">Copias de llaves</option>
                                    <option value="Confección de llaves ">Apertura de casas</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="row justify-content-between">
                        <!-- INPUT CLIENTT ADRESS-->
                        <div class="col-5 mb-3 row form m-2">
                            <label class="col-sm-3 col-form-label">Dirección:</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" id="address" required>
                            </div>
                        </div>
                        <!-- INPUT APPOINTMENT DAY -->
                        <div class="col-6 mb-3 row form m-2">
                            <label class="col-sm-5 col-form-label">Día de la cita:</label>
                            <div class="col-sm-7">
                                <select class="form-select" id="daySelect" required></select>
                            </div>
                        </div>
                    </div>
                    <div class="row justify-content-between">
                        <!-- INPUT CLIENT PHONE -->
                        <div class="col-5 mb-3 row form m-2">
                            <label class="col-sm-3 col-form-label">Teléfono:</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" id="phone" required>
                            </div>
                        </div>
                        <!-- DIV OF COLUMNS-->
                        <div class="col-6 mb-3 row form m-2">
                        </div>
                    </div>
                    <div class="row justify-content-between">
                        <!-- INPUT CLIENT EMAIL -->
                        <div class="col-5 mb-3 row form m-2">
                            <label class="col-sm-3 col-form-label">Correo:</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" id="email" required>
                            </div>
                        </div>
                        <!-- SUMBIT APPOINTMENT -->
                        <div class="d-flex col-3 mb-3 row form">
                        </div>
                        <div class="d-flex col-3 mb-3 row form m-2">
                            <button type="submit" class="btn bg-dark btn-outline-dark" id="boton">Agendar</button>
